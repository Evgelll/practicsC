<Window x:Class="z1.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="200" Width="300">
    <Grid>
        <Label Content="Имя пользователя:" VerticalAlignment="Top" Margin="5,2,5,0"/>
        <TextBox x:Name="UsernameTextBox" VerticalAlignment="Top" Margin="120,10,10,0"/>

        <Label Content="Пароль:" VerticalAlignment="Top" Margin="5,42,5,0"/>
        <PasswordBox x:Name="PasswordBox" VerticalAlignment="Top" Margin="120,50,10,0"/>

        <Button Content="Войти" VerticalAlignment="Top" Margin="10,100,155,0" Click="LoginButton_Click"/>
        <Button Content="Регистрация" VerticalAlignment="Top" Margin="150,100,10,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>