<Window x:Class="z1.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="250" Width="300">
    <Grid>
        <Label Content="Имя пользователя:" VerticalAlignment="Top" Margin="5,2,5,0"/>
        <TextBox x:Name="UsernameTextBox" VerticalAlignment="Top" Margin="120,10,10,0"/>

        <Label Content="Пароль:" VerticalAlignment="Top" Margin="5,42,5,0"/>
        <PasswordBox x:Name="PasswordBox" VerticalAlignment="Top" Margin="120,50,10,0"/>

        <Label Content="Роль:" VerticalAlignment="Top" Margin="5,86,5,0"/>
        <ComboBox x:Name="RoleComboBox" VerticalAlignment="Top" Margin="120,90,10,0">
            <ComboBoxItem Content="Менеджер" />
            <ComboBoxItem Content="Администратор" />
        </ComboBox>

        <Button Content="Зарегистрироваться" VerticalAlignment="Top" Margin="10,130,10,0" Click="RegisterButton_Click"/>
    </Grid>
</Window>